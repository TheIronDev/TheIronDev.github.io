<!DOCTYPE html>
<html>
<head>
	<title><%= @document.title %> | The Iron Developer's Home</title>
	<%- @getBlock("meta").toHTML() %>
	<%- @getBlock("styles").add(["/styles/style.css"]).add(["/styles/highlightjs-github.css"]).toHTML() %>
	<script data-main="/scripts/config" src="/scripts/lib/require.js"></script>
</head>
<body>
<div class="container">
	<div class="container-inner <%= @document.wrapperClass %>">
		<h1>
			<a href="/">TheIronDeveloper</a><% if @document.title : %>: <%= @document.title %><% end %>
		</h1>

		<div class="content">
			<%- @content %>
		</div>
	</div>
</div>
<%- @getBlock("scripts").toHTML() %>
</body>
</html>
